<div class="page">
  {{#if msg}}
  <div class="alert alert-info">
    {{msg}}
  </div>
  {{/if}}
  <div class="hd">
    <h1 class="page_title">个人资料</h1>
  </div>
  <div class="bd">
    <div class="weui_cells_title">个人信息</div>
    <div class="weui_cells">
      <div class="weui_cell">
        <div class="weui_cell_bd weui_cell_primary">
          <p>昵称</p>
        </div>
        <div class="weui_cell_ft">
          {{account.nickname}}
        </div>
      </div>
    </div>

    <form id="change_account_form" method="post" action="{{appname}}/change_account">
      <input type="hidden" id="openid" name="openid" value="{{openid}}" /> 
      <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">姓名</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input type="text" id="username" name="username" class="weui_input" placeholder="请输入真实姓名" value="{{account.username}}" />
          </div>
        </div>
        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">性别</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <select class="weui_input" id="sex" name="sex">
              <option value="1">男</option>
              <option value="2">女</option>
            </select>
          </div>
        </div>
        <div class="weui_cell">
          <div class="weui_cell_hd"><label class="weui_label">手机</label></div>
          <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" id="telephone" name="telephone" value="{{account.telephone}}" type="number" pattern="[0-9]*" placeholder="请输入号码" />
          </div>
        </div>
      </div>
      <div class="weui_btn_area">
        <button type="submit" class="weui_btn weui_btn_primary">提交</button>
      </div>
    </form>
  </div>
</div>

{{#extend "scripts"}}
<script>
  $("#sex").val("{{account.sex}}");
</script>
{{/extend}}
