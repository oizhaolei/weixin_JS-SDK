{{#if msg}}
<div class="alert alert-info">
  {{msg}}
</div>
{{/if}}
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">个人信息</h3>
  </div>
  <div class="panel-body">
    <h5 class="text-primary">昵称：{{account.nickname}}</h5>
    <h5 class="text-primary">余额：{{{fen2yuan account.balance}}}元</h5>
    <form id="change_account_form" method="post" action="/change_account">
      <div class="form-group">
        <input type="hidden" id="openid" name="openid" value="{{openid}}" /> 
        <div class="input-group">
          <span class="input-group-addon">姓名</span>
          <input type="text" id="username" name="username" class="form-control" placeholder="请输入真实姓名" value="{{account.username}}" />
        </div>
        </p>
        <div class="input-group">
          <span class="input-group-addon">性别</span>
          <select class="form-control" id="sex" name="sex">
            <option value="1">男</option>
            <option value="2">女</option>
          </select>
        </div>
        </p>
        <button type="submit" class="btn btn-primary btn-lg btn-block active">提交</button>
      </div>
    </form>
  </div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">绑定手机号码</h3>
  </div>
  <div class="panel-body">
    <form id="bind_telephone_form" method="post" action="/bind_telphone">
      <div class="input-group">
        <input type="hidden" id="openid" name="openid" value="{{openid}}" /> 
        <input type="text" class="form-control" id="telephone" name="telephone" value="{{account.telephone}}"placeholder="请输入手机号码" onkeyup="this.value=this.value.replace(/\D/g,'')" />
        <span class="input-group-btn">
          <button class="btn btn-primary active" type="submit">{{bind_action}}</button>
        </span>
      </div>
    </form>
  </div>
</div>
{{#extend "scripts"}}
<script>
  $("#sex").val("{{account.sex}}");
</script>
{{/extend}}
