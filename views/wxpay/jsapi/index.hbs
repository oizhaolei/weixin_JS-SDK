<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>微信支付</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body ontouchstart="">
    <div class="wxapi_container">

        <div class="lbox_close wxapi_form">
            <h3 id="menu-pay">{{ params.body }}</h3>
            <span class="desc">{{ params.detail }}</span>
            <button class="btn btn_primary" id="chooseWXPay">支付</button>
        </div>
    </div>
</body>
<script src="../../jweixin-1.0.0.js"></script>
<script src="http://libs.baidu.com/jquery/2.0.0/jquery.min.js"></script>
<script>
 $('#chooseWXPay').click(function () {
     WeixinJSBridge.invoke(
         'getBrandWCPayRequest', {{{ json payargs }}},
         function(res){
             _log(res);
         }
     );
 });

 function _log(msg) {
     $.ajax({
         url: '/log',
         type: 'post',
         data: {
             msg: msg
         }
     });
 }
</script>

</html>
